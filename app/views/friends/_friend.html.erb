<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @friend.first_name %> <%= @friend.last_name%></h5>
    <p class="card-text">Phone: <%= @friend.phone %></p>
    <div class="d-flex gap-2">
      <%= link_to "Edit", edit_friend_path(@friend), class: "btn btn-info" %>
      <%= button_to "Delete", @friend, method: :delete, data: {turbo_confirm: "Sure?"}, class: "btn btn-info" %>
    </div>
  </div>
</div>